@model IEnumerable<MealCourse>
@{
    ViewData["Title"] = "Index";
}
<div class="container" p-3>
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Meal Course List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller-"MealCourse" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Meal Course
            </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped text-center mt-4" style="width:100%; border:1px solid black;">
    <thead>
            <tr style="width:100%; border:1px solid black;">
            <th>
                    MealCourse Name
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
                <tr style="width:100%; border:1px solid black;">
                <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-75 btm-group" role="group">
                            <a asp-controller="MealCourse" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                        <div class="w-75 btm-group" role="group">
                            <a asp-controller="MealCourse" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-x-circle-fill"></i>Delete</a>
                        </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
